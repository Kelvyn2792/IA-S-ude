                    </div>
                `;
            });
            
            const challengesAccordionContainer = document.getElementById('challenges-accordion');
            data.challenges.forEach((challenge, index) => {
                const item = document.createElement('div');
                item.className = 'border-b border-slate-200';
                item.innerHTML = `
