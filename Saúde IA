                    labels: ['2023', '2024', '2025', '2026', '2027'],
                    datasets: [{
                        label: 'Ado√ß√£o de IA na Sa√∫de (LATAM)',
                        data: [10, 15, 22, 30, 38],
                        backgroundColor: '#0d9488',
